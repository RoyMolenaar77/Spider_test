@model Concentrator.ui.Management.Models.MediaAndSpecificationsModel
@{
  Layout = null;
}
<div class="portlet-content-container">
  <table class="portlet-content-table">
    <tr>
      <td>
        <span class="portlet-content-column"><a href="#" onclick="Concentrator.ViewInstance.open('content-item',{Media : false})">
          Products without any media :</a></span>
      </td>
      <td>
        <span class="strong">
          @Model.ProductsWithoutMedia
          of
          @Model.TotalProducts</span>
      </td>
      <td>
        <span class="portlet-content-column" style="margin-left: 15px; font-weight: bold">
          @Decimal.Round((Model.ProductsWithoutMedia / ((decimal)Model.TotalProducts / 100)), 1)
          %</span>
      </td>
    </tr>
    <tr>
      <td>
        <span class="portlet-content-column"><a href="#" onclick="Concentrator.ViewInstance.open('content-item',{Images : false})">
